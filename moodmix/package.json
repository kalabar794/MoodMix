{
  "name": "moodmix",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:security": "playwright test tests/security",
    "test:a11y": "playwright test tests/accessibility",
    "test:perf": "playwright test tests/performance",
    "test:all": "npm run lint && npm run test:unit:coverage && npm run test:e2e",
    "test:ci": "npm run lint && npm run test:unit -- --reporter=json && npm run test:e2e -- --reporter=list",
    "security-check": "echo '🔐 Security check skipped in build environment'",
    "security-check-local": "../scripts/security-check.sh",
    "audit-security": "npm audit --audit-level=high"
  },
  "dependencies": {
    "@radix-ui/react-slider": "^1.3.5",
    "@types/color": "^4.2.0",
    "axios": "^1.9.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.15.0",
    "lucide-react": "^0.511.0",
    "next": "15.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.3",
    "axe-playwright": "^2.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "jsdom": "^26.1.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^3.1.4"
  }
}
